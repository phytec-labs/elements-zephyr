/dts-v1/;

#include <hydrogen3.dtsi>

/ {
	model = "hydrogen_nexys4ddr";
	compatible = "hydrogen,hydrogen_nexys4ddr";

	aliases {
		uart-0 = &uart0;
		gpio-0 = &gpio0;
		gpio-1 = &gpio1;
	};

	chosen {
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,sram = &ram0;
	};

	leds {
		compatible = "gpio-leds";

		heartbeat: HEARTBEAT {
			gpios = <&gpio0 0 GPIO_ACTIVE_HIGH>;
			label = "Heartbeat LED";
		};

		ok: OK {
			gpios = <&gpio0 1 GPIO_ACTIVE_HIGH>;
			label = "Status OK LED";
		};

		error: ERROR {
			gpios = <&gpio0 2 GPIO_ACTIVE_HIGH>;
			label = "Status error LED";
		};
	};

	keys {
		compatible = "gpio-keys";

		reset: RESET {
			gpios = <&gpio0 3 GPIO_ACTIVE_LOW>;
			label = "Reset Button";
		};

		cursor_up: CURSOR_UP {
			gpios = <&gpio1 0 GPIO_ACTIVE_HIGH>;
			label = "Cursor Up Button";
		};

		cursor_right: CURSOR_RIGHT {
			gpios = <&gpio1 1 GPIO_ACTIVE_HIGH>;
			label = "Cursor Right Button";
		};

		cursor_down: CURSOR_DOWN {
			gpios = <&gpio1 2 GPIO_ACTIVE_HIGH>;
			label = "Cursor Down Button";
		};

		cursor_left: CURSOR_LEFT {
			gpios = <&gpio1 3 GPIO_ACTIVE_HIGH>;
			label = "Cursor Left Button";
		};

		cursor_enter: CURSOR_ENTER {
			gpios = <&gpio1 4 GPIO_ACTIVE_HIGH>;
			label = "Cursor Enter Button";
		};
	};
};
